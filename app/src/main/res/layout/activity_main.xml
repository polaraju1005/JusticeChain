<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtheadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to JusticeChain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtsubheadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Justice, Redefined: Blockchain Empowered"
        android:layout_below="@+id/txtheadline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btgetstarted"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtsubheadline"
        android:layout_marginTop="50dp"


        />
</RelativeLayout>